<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@color/fui_bgPhone"
    >
    <!-- vertical ScrollView to make all the items or views scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <!-- LinearLayout Inside ScrollView -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <Button
                android:id="@+id/buttonback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Back"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Application Filling"
                android:textAlignment="center"
                android:textSize="19sp"
                android:textStyle="bold|italic" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Name"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/FullName"
                    android:layout_width="347dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"

                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>
            <!-- create a Linear Layout with horizontal orientation and weightSum property -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Address"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/Address"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"

                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Birthday"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/Birthday"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"

                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Email"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/Email"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"

                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Contact"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/Contact"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="What animal are you interested in adopting?"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/q1"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Why did you decide to adopt a FurFriend? Is this your first adoption?"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/q2"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="What type of residential space do you live in?"
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/q3"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Who do you live with and what is your relationship with them? Please specify their age. "
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/q4"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.6"
                android:paddingLeft="10dp"
                android:text="Where will the animal be kept during the day? And at night? "
                android:textAlignment="center"
                android:textSize="19sp" />

            <LinearLayout
                android:id="@+id/Layout10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- place one TextView and one EditText inside layout using weight property -->

                <EditText
                    android:id="@+id/q5"
                    android:layout_width="373dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.4"
                    android:imeOptions="actionNext"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

            </LinearLayout>

            <Button
                android:id="@+id/submit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Submit" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>